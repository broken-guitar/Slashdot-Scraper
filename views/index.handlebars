<div id="home">

  <div class="container">
    
    <div class="row">

      <div class="col-10 offset-1">
            <div class="jumbotron">
                <h1 class="display-4">Slashdot Scraper</h1>
                <p class="lead">Oh boy here are some sweet pipin' hot tech news articles courteousy of slashdot.org</p>
                <hr class="my-4">
                <p>Click the scrape button to get some articles.</p>
                <a class="btn btn-primary btn-lg" href="/scrape" role="button">Scrape</a>
            </div>
        
        <h2>Articles: </h2>
    
        
        <h3></h3>
   
          {{#each articleData}}
          
            <div class="card my-2" style="width: 100%;" data-id="{{this.dataId}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.headline}}</h5>
                    <p class="card-text">{{this.summary}}</p>
                    
                    <a href="{{this.url}}" class="btn btn-primary">Article</a>
                    <button                     
                        class="btn btn-primary show-comments"
                        type="button"
                        data-id="{{this.dataId}}">
                            Comments
                    </button>
                    
                    {{!-- expanding comment div --}}
                    <div comment-div-id="{{this.dataId}}" class="collapse mt-3">
                        
                        {{!-- comments input form --}}
                        <form class="my-2 needs-validation" novalidate>
                            <div class="form-row">
                                <div class="col-10">
                                    <input data-id={{this.dataId}} type="text" class="form-control comment-input" placeholder="Add comment" required>
                                    <div class="invalid-feedback">
                                    Please add a comment.
                                    </div>
                                </div>
                                <div class="col-2">
                                    <button disabled data-id="{{this.dataId}}" class="btn w-100 btn-success float-right add add-comment">➤</button>
                                </div>
                            </div>
                        </form>

                        {{!-- rendered comments go here --}}
                        <div class="list-group"></div>                                                
                    </div>
                    
                </div>
            </div>
            {{!-- <button class="btn btn-danger float-right delete">ｘ</button> --}}
          {{/each}}
        {{!-- </ul> --}}
      
      </div>
      
    
    </div> {{!-- row div --}}
  
  </div> {{!-- container div --}}

</div> {{!-- home div --}}
